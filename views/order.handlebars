<!-- body -->
<div class='container'>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">预约</h4>
    </div>
    <div class="panel-body">
      {{#if bookInfo}}
      <div class="col-lg-4 col-lg-offset-4">
        <h4 class="text-center">确认图书基本信息：</h4>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td width="20%">索书号</td>
              <td id="barcode">{{bookInfo.callNumber}}</td>
            </tr>
            <tr>
              <td width="20%">书名</td>
              <td>{{bookInfo.title}}</td>
            </tr>
            <tr>
              <td width="20%">责任者</td>
              <td>{{bookInfo.author}}</td>
            </tr>
            <tr>
              <td width="20%">出版社</td>
              <td>{{bookInfo.press}}</td>
            </tr>
            <input id="isbn" type="hidden" value="{{bookInfo.isbn}}">
          </tbody>
        </table>
        <h4 class="text-center"><Button id="order" class="btn btn-primary">预约</Button></h4>
      </div>
      {{/if}}
    </div>
  </div>
  {{>footer}}
</div>